# Glean API Configuration
# Required: Your Glean instance name (e.g., "companyname")
GLEAN_INSTANCE=your_glean_instance_name

# Required: Your Glean API token with AGENTS scope
GLEAN_API_TOKEN=your_glean_api_token_here

# Required: The specific agent ID you want to run
GLEAN_AGENT_ID=your_glean_agent_id_here

# Optional: Custom base URL (defaults to {instance}-be.glean.com)
GLEAN_BASE_URL=your_custom_base_url_if_needed

# Optional: Timeout settings for HubSpot serverless functions
GLEAN_TIMEOUT_MS=8000
GLEAN_MAX_RETRIES=1

# HubSpot Configuration
# Required: HubSpot private app token
HUBSPOT_PRIVATE_APP_TOKEN=your_hubspot_private_app_token_here

# Required: Your HubSpot portal ID
HUBSPOT_PORTAL_ID=your_hubspot_portal_id_here

# Development Configuration
# Optional: Enable debug logging
DEBUG=false

# Optional: Environment setting
NODE_ENV=development

# Optional: For local development
HUBSPOT_CLIENT_ID=your_hubspot_client_id_here
HUBSPOT_CLIENT_SECRET=your_hubspot_client_secret_here 